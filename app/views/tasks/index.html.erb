<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><i class="fa-solid fa-square"></i></i><%= link_to task.title, task_path(task) %></li>
    <div class="options">
    <%= link_to "Edit task", edit_task_path(task.id)%>
    <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" }%>
     </div>
    <% end %>
</ul>

<a class="btn-new"><%= link_to "Add a new task", new_task_path%></a>
